<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

  body {
    text-align: center;
    padding: 20px;
    background-color: #121212;
    color: #ffffff;
    font-family: 'Orbitron', sans-serif;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 20px;
    color: #00ff00;
    text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
    animation: glow 1.5s infinite alternate;
  }

  @keyframes glow {
    from {
      text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00, 0 0 30px #00ff00;
    }
    to {
      text-shadow: 0 0 20px #00ff00, 0 0 30px #00ff00, 0 0 40px #00ff00;
    }
  }

  .table-container {
    margin: 0 auto;
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.6);
    border-radius: 12px;
    background-color: #1f1f1f;
    padding: 15px;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    max-width: 100%;
    overflow-x: auto;
  }

  .table-container:hover {
    box-shadow: 0 0 40px rgba(0, 255, 0, 0.8);
    transform: scale(1.02);
  }

  .table {
    width: 100%;
    background-color: #ffffff;
    border-collapse: separate;
    border-spacing: 0;
    border-radius: 12px;
    overflow: hidden;
    font-size: 1.1rem;
    table-layout: fixed;
  }

  .table th, .table td {
    padding: 20px;
    text-align: center;
    font-size: 1.2rem;
    color: #000000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    transition: background-color 0.3s ease, color 0.3s ease, font-size 0.3s ease;
    border: none;
  }

  .table th {
    background: linear-gradient(135deg, #004080, #001f4d);
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.05rem;
    text-shadow: 0 0 5px #003366;
    position: sticky;
    top: 0;
    z-index: 1;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    transition: background 0.5s ease, transform 0.3s ease;
  }

  .table th:hover {
    background: linear-gradient(135deg, #003366, #001a40);
    transform: scale(1.05);
  }

  .table tbody tr {
    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.2s ease;
  }

  .table tbody tr:nth-child(even) {
    background-color: #f5f5f5;
  }

  .table tbody tr:nth-child(odd) {
    background-color: #e0e0e0;
  }

  .table tbody tr:hover {
    background-color: #0056b3;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 86, 179, 0.3);
    cursor: pointer;
  }

  .table tbody tr.selected {
    background-color: #004d40 !important;
    color: #ffffff;
    transform: scale(1.02);
    box-shadow: 0 0 20px rgba(0, 77, 64, 0.7);
  }

  .table td.player-name {
    font-weight: bold;
    font-size: 1.3rem;
    transition: color 0.3s ease, font-size 0.3s ease;
  }

  .table td.player-score {
    font-weight: bold;
    font-size: 1.2rem;
    transition: color 0.3s ease;
  }

  /* Aumentar a fonte do nome do jogador quando selecionado */
  .table tbody tr.selected .player-name {
    font-size: 1.5rem;
  }

  /* Estilo personalizado para checkbox */
  .table input[type="checkbox"] {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    width: 25px;
    height: 25px;
    border: 2px solid #007bff;
    border-radius: 5px;
    background-color: #ffffff;
    cursor: pointer;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .table input[type="checkbox"]:checked {
    background-color: #007bff;
    border-color: #0056b3;
  }

  .table input[type="checkbox"]:checked::before {
    content: '✔';
    display: block;
    text-align: center;
    color: #ffffff;
    font-size: 1rem;
  }

  .table input[type="checkbox"]:hover {
    box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
  }

  .table input[type="datetime-local"] {
    font-size: 1.3rem;
    padding: 5px;
    margin-left: 10px;
    border-radius: 5px;
    border: 1px solid #007bff;
    background-color: #f5f5f5;
    color: #000000;
    width: 90%;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .table input[type="datetime-local"]:focus {
    border-color: #0056b3;
    box-shadow: 0 0 10px rgba(0, 86, 179, 0.5);
  }

  #form-teams-btn {
    width: 100%;
    font-size: 1.5rem;
    padding: 15px;
    border-radius: 5px;
    background-color: #00ff00;
    color: #121212;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s, color 0.3s, transform 0.3s ease;
    text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
  }

  #form-teams-btn:disabled {
    background-color: #3b3b3b;
    color: #999999;
    cursor: not-allowed;
    text-shadow: none;
  }

  #form-teams-btn:not(:disabled):hover {
    background-color: #00cc00;
    color: #f5f5f5;
    transform: scale(1.05);
  }

  .selected {
    background-color: #004d40 !important;
    color: #ffffff !important;
  }

  #confirmed-players-count {
    font-weight: bold;
    font-size: 2rem;
    color: #00ff00;
    text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
    animation: pulse 1s infinite alternate;
  }

  @keyframes pulse {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.1);
    }
  }

  .hidden {
    display: none;
  }

  /* Media Queries para Responsividade */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .table th, .table td {
      padding: 10px;
      font-size: 1rem;
    }

    .table input[type="checkbox"] {
      width: 20px;
      height: 20px;
    }

    .table td.player-name, .table td.player-score {
      font-size: 1.1rem;
    }

    #form-teams-btn {
      font-size: 1.2rem;
      padding: 10px;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.5rem;
    }

    .table th, .table td {
      padding: 8px;
      font-size: 0.9rem;
    }

    .table input[type="checkbox"] {
      width: 18px;
      height: 18px;
    }

    .table td.player-name, .table td.player-score {
      font-size: 1rem;
    }

    #form-teams-btn {
      font-size: 1rem;
      padding: 8px;
    }
  }
</style>




<div class="container mt-5">
  <h1 class="mb-4">Futebol - Quarta</h1>

  <p>Selecione os jogadores desejados. Após selecionar, clique em "Formar Times".</p>
  <p>Selecione <strong>pelo menos 12 jogadores</strong> para formar times.</p>
  <p><strong><span id="confirmed-players-count">0</span></strong> jogador(es) confirmado(s).</p>

  <%= form_tag form_teams_players_path, method: :post do %>
    <div class="mb-3">
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-lg btn-primary" id="form-teams-btn" disabled>Formar Times</button>
      </div>
    </div>
    <div class="table-container">
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>Jogador</th>
            <th>Selecionar</th>
            <th>Data e Hora</th>
          </tr>
        </thead>
        <tbody>
          <% @players.each do |player| %>
            <tr class="table-row">
              <td class="player-name"><%= player.name %></td>
              <td><%= check_box_tag 'player_ids[]', player.id %></td>
              <td>
                <%= datetime_field_tag "player_times[#{player.id}]", Time.now, class: 'hidden', disabled: true %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var formTeamsBtn = document.getElementById('form-teams-btn');
  var checkboxes = document.querySelectorAll('input[type="checkbox"]');
  var confirmedPlayersCountElement = document.getElementById('confirmed-players-count');

  function formatDateToLocalISO(date) {
    // Ajusta o horário para o fuso local e formata para incluir segundos
    var offset = date.getTimezoneOffset() * 60000;
    var localISOTime = new Date(date - offset).toISOString().slice(0, 19); // Inclui segundos
    return localISOTime;
  }

  function updateFormState() {
    var selectedPlayers = document.querySelectorAll('input[type="checkbox"]:checked').length;
    confirmedPlayersCountElement.innerText = selectedPlayers;
    formTeamsBtn.disabled = selectedPlayers < 12;
  }

  function toggleRowState(checkbox) {
    var row = checkbox.closest('.table-row');
    row.classList.toggle('selected', checkbox.checked);

    var datetimeField = row.querySelector('input[type="datetime-local"]');
    if (checkbox.checked) {
      row.classList.add('selected');
      var now = new Date();
      datetimeField.classList.remove('hidden');
      datetimeField.value = formatDateToLocalISO(now); // Inclui segundos
    } else {
      row.classList.remove('selected');
      datetimeField.classList.add('hidden');
      datetimeField.value = '';
    }
  }

  checkboxes.forEach(function(checkbox) {
    checkbox.addEventListener('change', function() {
      updateFormState();
      toggleRowState(this);
    });
  });

  formTeamsBtn.addEventListener('click', function() {
    if (document.querySelectorAll('input[type="checkbox"]:checked').length < 12) {
      alert('Selecione pelo menos 12 jogadores para formar times.');
      return false;
    }
  });
});
</script>
