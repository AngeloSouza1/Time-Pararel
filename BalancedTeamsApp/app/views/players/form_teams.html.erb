<% images = (1..12).to_a.cycle %> <!-- Ciclo para repetir a lista de 1 a 12 -->
<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

  body {
    text-align: center;
    padding: 20px;
    background-color: #121212;
    color: #ffffff;
    font-family: 'Orbitron', sans-serif;
    margin: 0;
  }

  h1 {
    margin-bottom: 20px;
    font-size: 3rem;
    color: #00ff00;
    text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
    animation: glow 1.5s infinite alternate;
  }

  h2 {
    margin-bottom: 15px;
    font-size: 2rem;
    color: #007bff;
    text-shadow: 0 0 10px #007bff, 0 0 20px #007bff;
  }

  .formation-table {
    width: 100%;
    background-color: #ffffff;
    margin: 20px 0;
    table-layout: fixed;
    border-collapse: collapse;
  }

  .formation-table th, .formation-table td {
    padding: 10px;
    text-align: center;
    color: #000000;
    font-size: 1.2rem;
    border: none; /* Remove as bordas das células */
  }

  .formation-table th {
    font-weight: bold;
    font-size: 1.5rem;
    color: #00ff00;
    text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
  }

  .formation-table img {
    height: 50px;
    margin-right: 10px;
    vertical-align: middle;
  }

  .btn-secondary {
    background-color: #00ff00;
    color: #121212;
    padding: 10px 20px;
    font-size: 1.2rem;
    border-radius: 5px;
    text-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
    transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
  }

  .btn-secondary:hover {
    background-color: #00cc00;
    color: #f5f5f5;
    transform: scale(1.05);
  }

  /* Responsividade */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    .formation-table th, .formation-table td {
      padding: 8px;
      font-size: 1rem;
    }

    .btn-secondary {
      font-size: 1rem;
      padding: 8px 16px;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1.2rem;
    }

    .formation-table th, .formation-table td {
      padding: 6px;
      font-size: 0.9rem;
    }

    .btn-secondary {
      font-size: 0.9rem;
      padding: 6px 12px;
    }
  }
</style>

<div class="container mt-5">
  <h1>Times Formados</h1>

  <h2>Time A: <%= number_to_percentage(team_percentage(@balanced_teams[0]), precision: 0) %> de força</h2>
  <table class="formation-table">
    <% if @balanced_teams[0].size <= 12 %>
      <% @balanced_teams[0].each_slice(3).each do |group| %>
        <tr>
          <% group.each do |player| %>
            <td>
              <img src="<%= asset_path("jog#{images.next}.png") %>" alt="Avatar de <%= player.name %>">
              <%= player.name %>
            </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </table>

  <h2>Time B: <%= number_to_percentage(team_percentage(@balanced_teams[1]), precision: 0) %> de força</h2>
  <table class="formation-table">
    <% if @balanced_teams[1].size <= 12 %>
      <% @balanced_teams[1].each_slice(3).each do |group| %>
        <tr>
          <% group.each do |player| %>
            <td>
              <img src="<%= asset_path("jog#{images.next}.png") %>" alt="Avatar de <%= player.name %>">
              <%= player.name %>
            </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </table>

  <% if @balanced_teams[2]&.any? %>
    <h2>Próximo Time: <%= number_to_percentage(team_percentage(@balanced_teams[2]), precision: 0) %> de força</h2>
    <table class="formation-table">
      <% @balanced_teams[2].each_slice(3).each do |group| %>
        <tr>
          <% group.each do |player| %>
            <td>
              <img src="<%= asset_path("jog#{images.next}.png") %>" alt="Avatar de <%= player.name %>">
              <%= player.name %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <% end %>

  <%= link_to 'Voltar', :back, class: 'btn btn-secondary mt-3' %>
</div>
